.con {
  width: 100%;
}

.con image {
  width: 100%;
}

.con .text {
  font-size: 11pt;
  width: 90%;
  margin-left: 5%;
  margin-top: 8pt;
  line-height: 18pt;
  text-align: justify;
  text-justify: inter-ideograph;
}
.con .text view{
  margin-top: 10rpx;
}
.con .text image{
  margin-top: 15rpx;
  height: 400rpx;
}
.time{
    width: 100%;
    height: 40rpx;
    position: relative;
    margin-top: 40rpx;
}
.more .more-article{
  margin-left: 30rpx;
}
.time image{
    width: 13pt;
    height: 13pt;
    margin-left: 5%;
    float: left;
    margin-top: -1rpx;
}
.time .date{
    margin-left: 5rpx;
    font-size: 10pt
}
.read .date{
  font-size: 10pt;
}
.read{
    right: 5%;
    position: absolute
}
.time .read view{
    margin-left: 13rpx;
}
.time .read .times{
    margin-top: -1rpx;
}
.time view{
    font-size: 11pt;
    color: #d4d4d4;
    float: left;
    line-height: 13pt;
}

.information {
  width: 100%;
  height: 150rpx;
  line-height: 130rpx;
  text-align: center;
  font-size: 12pt;
  color: #acacac;
  background: #f9f9f9;
  margin-top: 80rpx;
}

.information image {
  width: 14%;
  height: 1px;
  display: block;
  margin-left: 43%;
  margin-top: -10rpx;
}

.form view {
  width: 100%;
  font-size: 11pt;
  padding-left: 15pt;
  border-bottom: 1px solid #f2f2f2;
  height: 18pt;
  line-height: 15pt;
}

.form input {
  width: 60%;
  display: inline-block;
  height: 11pt;
  overflow: visible;
  margin-left: 5pt;
}

.form .btn {
  width: 100%;
  height: 50pt;
  background: #f9f9f9;
}

.form .btn button {
  width: 80%;
  height: 20pt;
  font-size: 12pt;
  line-height: 20pt;
  color: #fff;
  background: #32afff;
  margin-left: 5%;
  border: 0;
  margin-top: 80rpx;
}

.more {
  padding-top: 30rpx;
  width: 100%;
  height: 300rpx;
  background: #f9f9f9;
  font-size: 11pt;
  padding-left: 0rpx;
  margin-top: 50rpx;
  color: #888;
  padding-bottom: 20rpx;
}

scroll-view {
  width: 100%;
  height: 80pt;
  white-space: nowrap;
  margin-top: 10pt;
}

scroll-view view {
  display: inline-block;
  margin-right: 10pt;
  width: 100pt;
  height: 100%;
  text-align: center;
  white-space: no-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 11pt;
  line-height: 20pt;
}

scroll-view view image {
  display: block;
  width: 100%;
  height: 65pt;
}

scroll-view view:first-child {
  margin-left: 0;
  margin-left: 30rpx;
}
