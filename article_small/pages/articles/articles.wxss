.page{
    overflow: hidden
}
.con{
  width: 100%
}
.con image{
  width: 100%;
}

.con .text{
  font-size: 11pt;
  width: 90%;
  margin-left: 5%;
  margin-top: 10pt;
  line-height: 18pt;
  text-align: justify;
  text-justify: inter-ideograph
}
.time{
    width: 100%;
    height: 40rpx;
    position: relative;
    margin-top: 40rpx;
    padding-bottom: 40rpx;
}
.time image{
    width: 13pt;
    height: 13pt;
    margin-left: 5%;
    float: left;
    margin-top: -1rpx;
}
.time .date{
    margin-left: 5rpx;
    font-size: 10pt;
}
.read .date{
    font-size: 10pt;
}
.read{
    right: 5%;
    position: absolute
}
.time .read view{
    margin-left: 13rpx;
}
.time .read .times{
    margin-top: -1rpx;
}
.time view{
    font-size: 11pt;
    color: #d4d4d4;
    float: left;
    line-height: 13pt;
}
.information{
    width: 100%;
    height: 130rpx;
    line-height: 130rpx;
    text-align: center;
    font-size: 12pt;
    color: #acacac;
    background: #f9f9f9;
    padding-bottom: 40rpx;
}
.information image{
    width: 14%;
    height: 1px;
    display: block;
    margin-left: 43%;
    margin-top: -10rpx;
}
.form{
    width: 100%;
    overflow: hidden;
}
.form .vw{
    width: 100%;
    font-size: 11pt;
    border-bottom: 1px solid #f2f2f2;
    height: 30pt;
    line-height: 30pt;
}
.form .vw view{
    padding-left: 15pt;
    display: inline-block
}
.form input{
    width: 60%;
    display: inline-block;
    height: 11pt;
    overflow: visible;
    margin-left: 6pt;
    line-height: 11pt;
}
.form .btn{
    width: 100%;
    height: 50pt;
    background: #f9f9f9;
    padding-top: 44px;
}
.form .btn button{
    width: 80%;
    height: 30pt;
    font-size: 12pt;
    line-height: 30pt;
    color: #fff;
    background: #32afff;
    margin-left: 10%;
    border: 0;
}